<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="369dp"
        android:layout_height="254dp"
        android:background="#CEE6DFDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:background="@color/white"
        android:columnCount="4"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingright="5dp"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#2F52AC"
            android:text="C"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnPhanTram"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#2F52AC"
            android:text="%"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="7"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="8"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="9"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnNhan"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#2F52AC"
            android:text="X"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="4"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="5"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="6"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnTru"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#2F52AC"
            android:text="-"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="1"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="2"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="3"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnCong"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#2F52AC"
            android:text="+"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn00"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="00"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="0"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnCham"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#190547"
            android:text="."
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnBang"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="#B9E60F"
            android:text="="
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="3dp"
            android:backgroundTint="#2F52AC"
            android:text="Clear"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnChia"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginTop="3dp"
            android:backgroundTint="#2F52AC"
            android:text="/"
            android:textSize="16dp" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>